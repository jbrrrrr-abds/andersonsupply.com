{
  "parser": "babel-eslint",
  "extends": "@ueno/eslint-config/react",
  "plugins": [
    "react-hooks",
    "prettier"
  ],
  "rules": {
    "jsx-a11y/anchor-is-valid": [
      "off"
    ],
    "prettier/prettier": ["error"],
    "react/prop-types": [
      "off"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  }
}
