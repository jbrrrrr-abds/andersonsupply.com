{
  "extends": [
    "next"
  ],
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "jsx-a11y/anchor-is-valid": [
      "off"
    ],
    "@next/next/no-img-element": "off",
    "react/prop-types": [
      "off"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  }
}
